{
  "name": "invert-color",
  "version": "10.0.0",
  "description": "Simply invert fills, strokes & effects colors in Figma",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "code.js",
  "scripts": {
    "release": "rimraf dist/* && npm run prettier && npm run lint && npm run build",
    "build": "webpack",
    "watch": "webpack --watch",
    "lint": "eslint 'src/**/*.{tsx,ts}' --fix",
    "prettier": "prettier --write 'src/**/*.{html,scss,css,tsx,ts}'",
    "commit": "git-cz",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pluginsky/invert-color.git"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-figma-ui": "^1.0.1",
    "zustand": "^3.3.3"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.19.2",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "css-loader": "^5.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.1",
    "react-dev-utils": "^11.0.4",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.3",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3",
    "typescript-plugin-css-modules": "^3.2.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.25.0",
    "webpack-cli": "^4.5.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{html,scss,css,tsx,ts}": [
      "npm run prettier"
    ],
    "src/**/*.{tsx,ts}": [
      "npm run lint"
    ]
  }
}
